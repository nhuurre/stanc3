      ps[2, i, t, 2] = phi[t];
      ps[2, i, t, 3] = 1 - phi[t];
      ps[3, i, t, 1] = 0.0;
      ps[3, i, t, 2] = 0.0;
      ps[3, i, t, 3] = 1.0;
      // Define probabilities of O(t) given S(t)
      po[1, i, t, 1] = 0.0;
      po[1, i, t, 2] = 1.0;
      po[2, i, t, 1] = p[t];
      po[2, i, t, 2] = 1.0 - p[t];
      po[3, i, t, 1] = 0.0;
      po[3, i, t, 2] = 1.0;
