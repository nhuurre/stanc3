  //  mean_phi ~ uniform(0, 1);
  //  mean_p ~ uniform(0, 1);
  // Likelihood
  // Forward algorithm derived from Stan Modeling Language
  // User's Guide and Reference Manual
  for (i in 1 : M) {
    // Make sure that all M individuals are in state 1 at t=1
    gam[1, 1] = 1.0;
    gam[1, 2] = 0.0;
