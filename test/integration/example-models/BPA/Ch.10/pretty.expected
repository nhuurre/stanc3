  simplex[3] ps[3, M, n_occ_minus_1];
  simplex[2] po[3, M, n_occ_minus_1];
  // Constraints
  for (t in 1 : n_occ_minus_1) {
    phi[t] = mean_phi;
    p[t] = mean_p;
  }
  // Define state-transition and observation matrices
  for (i in 1 : M) {
    // Define probabilities of state S(t+1) given S(t)
    for (t in 1 : n_occ_minus_1) {
      ps[1, i, t, 1] = 1.0 - gamma[t];
      ps[1, i, t, 2] = gamma[t];
      ps[1, i, t, 3] = 0.0;
